#include<iostream>
using namespace std;

int main(){
    int i,count,n;
    cin>>i;
    n=i;
    count=0;
    while(n!=1){
        if(n%2==1 && n!=0){
            n = (3*n)+1;
            count++;
        }
        else if(n%2==0){
            n= n/2;
            count++;
        }
    }
    count++;
    cout<<count;
    return 0;
}
